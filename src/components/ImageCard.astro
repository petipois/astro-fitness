---
interface Props {
  text: string;
  imageURL: string;
}
const { text = "", imageURL = "" } = Astro.props;
---

<div class="p-8">
  <div class="flex justify-center">
    <img src={"/images/" + imageURL} alt={imageURL} />
  </div>
  <h2 class="mt-2 text-white text-lg p-8 rounded-xl border-2 border-white">
    {text}
  </h2>
</div>
