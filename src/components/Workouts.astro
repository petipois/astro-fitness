---
import LearnBtn from "./LearnBtn.astro";

const imageURL = "workout.jpg";
const bgStyle = {
  backgroundImage: `url('/images/${imageURL}')`,
};
---

<section
  class="bg-cover bg-no-repeat bg-gray-400 bg-blend-multiply"
  style={bgStyle}
>
  <div class="px-4 mx-auto max-w-xl text-center py-36 pinkText">
    <h1 class="font-extrabold text-4xl tracking-wide mb-4 uppercase">
      Workout <br />and Exercises
    </h1>
    <p class="text-lg">
      Talk about this product's most important feature or service. Highlighting
      the most popular one works, too! Talk about this product's most important
      feature or service. Highlighting the most popular one works, too!
    </p>
    <LearnBtn buttonText="Learn More" />
  </div>
</section>
